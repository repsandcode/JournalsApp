<div class="row">
  <h5 class="index-header">Journals</h5>
</div>

<div class="row">
  {{#each stories}}
    <div class="col s12 m6 mb-2">
      <div class="card">
        <div class="card-image">
          {{{editIcon user ../user _id}}}
        </div>
        <div class="card-content center-align">
          <h5 class="text-bold">{{title}}</h5>
          <p>{{stripTags (truncate body 30)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}" alt="">
            <a href="/stories/user/{{user._id}}" class="color-link">{{user.displayName}}</a>
          </div>
        </div>

        <div class="card-action center-align">
          <a href="/stories/{{_id}}" class="btn blue-grey lighten-2">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No journals to display</p>
  {{/each}}
</div>